@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="ModelOnly"></div>*@
        <div class="mb-3 row p-1 ">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1 ">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control" />
        </div>
        <button class="btn btn-danger" type="submit">Delete</button>
        <a asp-page="/categories/index"  class="btn btn-secondary border" type="submit">Go back</a>
    </div>
</form>